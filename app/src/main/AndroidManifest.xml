<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:usesCleartextTraffic="true"

        android:networkSecurityConfig="@xml/network_security_config"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Smart_Kids">

        <activity
            android:name=".ui.pages.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.pages.register.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".ui.pages.home.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".ui.pages.editprofile.EditProfileActivity"
            android:exported="false" />

        <activity
            android:name=".ui.pages.reading.ReadingActivity"
            android:exported="false" />

        <activity
            android:name=".ui.pages.writing.WritingActivity"
           android:exported="false" />

        <activity
            android:name=".ui.pages.introduction.AlphabetActivity"
            android:exported="false" />


    </application>

</manifest>